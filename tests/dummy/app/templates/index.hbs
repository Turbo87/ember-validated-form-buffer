<form onsubmit={{action 'submit'}} class="form-inline">
  <div class="form-group {{if data.hasDisplayErrors 'has-error'}}">
    <label class="control-label" for="name">Name</label>
    {{input value=data.name class='form-control' id='name' placeholder='Enter Name'}}
  </div>
  <button type="submit" class="btn btn-default">Save</button>
  <button type="button" class="btn" onclick={{action 'reset'}}>Reset</button>
</form>

{{#if data.hasDisplayErrors}}
  <div class="text-danger">
    <h3>Validation Errors</h3>
    <ul>
      {{#each-in data.displayErrors as |attribute errors|}}
        <strong>{{attribute}}</strong>
        <ul>
          {{#each errors as |error|}}
            <li>{{error}}</li>
          {{/each}}
        </ul>
      {{/each-in}}
    </ul>
  </div>
{{/if}}